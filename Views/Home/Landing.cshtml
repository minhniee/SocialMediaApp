@{
    ViewData["Title"] = "Welcome to SocialMediaApp";
    Layout = "_Layout"; // Explicitly set the layout
}

<div class="landing-page">
    <div class="container">
        <div class="row align-items-center py-5">
            <div class="col-md-6">
                <h1 class="display-4 fw-bold text-primary mb-3">Connect with friends and the world around you</h1>
                <p class="lead mb-4">Join SocialMediaApp today to share your thoughts, connect with friends, and discover what's happening in your community.</p>
                <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg px-4 me-md-2">Sign Up</a>
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-secondary btn-lg px-4">Log In</a>
                </div>
            </div>
            <div class="col-md-6">
                <img src="/placeholder.svg?height=400&width=600" class="img-fluid rounded shadow-lg" alt="People connecting">
            </div>
        </div>

        <hr class="my-5">

        <div class="row g-4 py-5">
            <h2 class="text-center mb-4">Why join SocialMediaApp?</h2>
            
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-primary bg-gradient text-white mb-3 mx-auto" 
                            style="width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="bi bi-people-fill fs-2"></i>
                        </div>
                        <h3 class="fs-4">Connect with Friends</h3>
                        <p class="mb-0">Stay in touch with friends and family, and meet new people with similar interests.</p>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-primary bg-gradient text-white mb-3 mx-auto" 
                            style="width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="bi bi-chat-square-text-fill fs-2"></i>
                        </div>
                        <h3 class="fs-4">Share Your Thoughts</h3>
                        <p class="mb-0">Express yourself with posts, photos, and comments. Engage in meaningful conversations.</p>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-primary bg-gradient text-white mb-3 mx-auto" 
                            style="width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="bi bi-shield-check fs-2"></i>
                        </div>
                        <h3 class="fs-4">Safe and Secure</h3>
                        <p class="mb-0">Your privacy matters. Control who sees your content with our robust privacy settings.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row py-5 align-items-center">
            <div class="col-md-6 order-md-2">
                <h2 class="fw-bold mb-3">Join millions of users worldwide</h2>
                <p class="lead">Our community is growing every day. Don't miss out on the conversations, connections, and content that matter to you.</p>
                <ul class="list-unstyled">
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-primary me-2"></i> Create a profile that showcases your personality</li>
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-primary me-2"></i> Share updates, photos, and important moments</li>
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-primary me-2"></i> Find and connect with friends, family, and like-minded people</li>
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-primary me-2"></i> Discover content tailored to your interests</li>
                </ul>
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary mt-3">Get Started Today</a>
            </div>
            <div class="col-md-6 order-md-1">
                <img src="/placeholder.svg?height=400&width=600" class="img-fluid rounded shadow-lg" alt="Community of users">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add any landing page specific JavaScript here
    </script>
}

