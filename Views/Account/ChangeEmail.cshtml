@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SocialMediaApp.ViewModels.ChangeEmailViewModel
@{
    ViewData["Title"] = "Change Email";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h2>Change Email</h2>
            </div>
            <div class="card-body">
                <form asp-action="ChangeEmail" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" placeholder="Current Email" readonly />
                        <label asp-for="Email"></label>
                    </div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="NewEmail" class="form-control" placeholder="New Email" />
                        <label asp-for="NewEmail"></label>
                        <span asp-validation-for="NewEmail" class="text-danger"></span>
                    </div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" placeholder="Password" />
                        <label asp-for="Password"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        After changing your email, you will need to confirm your new email address before it becomes active.
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="ManageAccount" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">Change Email</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

