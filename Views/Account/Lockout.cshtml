@{
    ViewData["Title"] = "Account Locked";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h2 class="text-center">Account Locked</h2>
            </div>
            <div class="card-body text-center">
                <div class="mb-4">
                    <i class="bi bi-lock-fill text-danger" style="font-size: 4rem;"></i>
                </div>
                <p>This account has been locked out due to too many failed login attempts.</p>
                <p>Please try again later or contact support if you need immediate assistance.</p>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Return to Home</a>
            </div>
        </div>
    </div>
</div>

