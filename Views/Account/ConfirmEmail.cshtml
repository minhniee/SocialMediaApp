@{
    ViewData["Title"] = "Email Confirmed";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h2 class="text-center">Email Confirmed</h2>
            </div>
            <div class="card-body text-center">
                <div class="mb-4">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                </div>
                <p>Thank you for confirming your email address.</p>
                <p>Your account is now fully activated and you can access all features of SocialMediaApp.</p>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Continue to Home</a>
            </div>
        </div>
    </div>
</div>

