@{
    ViewData["Title"] = "Account Deleted";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h2 class="text-center">Account Deleted</h2>
            </div>
            <div class="card-body text-center">
                <div class="mb-4">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                </div>
                <p>Your account has been successfully deleted.</p>
                <p>We're sorry to see you go. You're welcome back anytime!</p>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Return to Home</a>
            </div>
        </div>
    </div>
</div>

